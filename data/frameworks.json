{
  "frameworks": [
    {
      "id": "software_eats_x",
      "name": "Software Eats X",
      "trigger_conditions": [
        "analyzing industry transformation",
        "evaluating incumbents versus disruptors",
        "assessing startup opportunities in legacy sectors"
      ],
      "reasoning_steps": [
        "Identify the core information or transaction flow",
        "Ask what the workflow looks like as a software system",
        "Locate human pattern matching that can be automated",
        "Find where software creates 10x efficiency",
        "Check adoption blockers such as regulation or integration"
      ],
      "typical_conclusions": [
        "Incumbents will be disrupted faster than expected",
        "The opportunity is larger than it appears",
        "The bottleneck is adoption, not technology"
      ],
      "counter_conditions": [
        "Physical atoms dominate the value",
        "Trust or relationships are the product",
        "Regulatory capture is the moat"
      ]
    },
    {
      "id": "contrarian_test",
      "name": "Contrarian Test",
      "trigger_conditions": [
        "seeking differentiated investment theses",
        "testing consensus assumptions",
        "asking what most people miss"
      ],
      "reasoning_steps": [
        "Identify the consensus view",
        "Formulate a credible disagreement",
        "Check if evidence supports the disagreement",
        "Assess asymmetric upside if right"
      ],
      "typical_conclusions": [
        "The market underprices a tail outcome",
        "Consensus is anchored to outdated constraints"
      ],
      "counter_conditions": [
        "Pure contrarianism without evidence",
        "Markets with strong information efficiency"
      ]
    },
    {
